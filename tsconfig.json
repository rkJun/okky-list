{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    // "declarationDir": "types",
    "outDir": "dist",
    "lib": [ "es2020" ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "bin", "lib", "main.ts"  ],
  "exclude": [
    "node_modules"
  ]
}